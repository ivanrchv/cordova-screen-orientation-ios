<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="cordova-device-orientation-listener"
    version="1.0.0">

    <name>Device Orientation</name>
    <description>Adds Device object to iOS with listeners for device orientation change</description>
    <license>MIT</license>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <js-module src="www/deviceorientation.js" name="deviceorientation">
        <clobbers target="cordova.plugins.deviceorientation.listener" />
    </js-module>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="IRRDeviceOrientation">
                <param name="ios-package" value="IRRDeviceOrientation" />
            </feature>
        </config-file>
        <js-module src="www/deviceorientation.js" name="deviceorientation.ios">
            <merges target="cordova.plugins.deviceorientation.listener" />
        </js-module>
        <header-file src="src/ios/IRRDeviceOrientation.h" />
        <source-file src="src/ios/IRRDeviceOrientation.m" />
    </platform>

</plugin>
